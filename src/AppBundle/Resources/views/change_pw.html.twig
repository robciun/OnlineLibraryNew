{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Change password</h1>

                {{ form_start(form) }}
                {{ form_row(form.oldPassword) }}
                {{ form_row(form.newPassword) }}

                <button type="submit" class="btn btn-success">Change</button>

                {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock %}
