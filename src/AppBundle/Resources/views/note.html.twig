{% extends 'base.html.twig' %}

{% block title %}New Note {% endblock %}
{% block body %}

    <h1 class="page-header text-center">
        Note
    </h1>

    <div class="container">
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="row">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                    <div class="col-sm-4"></div>
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>
{% endblock body %}